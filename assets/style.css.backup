:root {
    /* Improved Contrast for Projector */
    --bg-color: #1e293b;
    /* Lighter dark background */
    --card-bg: #334155;
    /* Lighter card background */
    --text-color: #f8fafc;
    /* Brighter text */
    --text-muted: #cbd5e1;
    /* Brighter muted text */
    --primary-color: #34d399;
    /* Brighter green */
    --primary-glow: rgba(52, 211, 153, 0.6);
    --secondary-color: #a78bfa;
    /* Brighter purple */
    --error-color: #f87171;
    /* Brighter red */
    --warning-color: #fbbf24;
    /* Brighter yellow */
    --border-color: #475569;
    --font-mono: 'Fira Code', 'Courier New', monospace;
}

/* Projector Mode (High Contrast) */
:root.projector-mode {
    --bg-color: #ffffff;
    --card-bg: #f3f4f6;
    --text-color: #000000;
    --text-muted: #334155;
    --primary-color: #000000;
    --primary-glow: rgba(0, 0, 0, 0.1);
    --secondary-color: #4f46e5;
    --error-color: #dc2626;
    --warning-color: #d97706;
    --border-color: #000000;
}

:root.projector-mode body {
    background-image: none;
    background-color: #ffffff;
}

:root.projector-mode .card,
:root.projector-mode .demo-card {
    border: 2px solid #000;
    box-shadow: none;
}

:root.projector-mode h1,
:root.projector-mode h2,
:root.projector-mode h3 {
    text-shadow: none;
    font-weight: 900;
}

:root.projector-mode input,
:root.projector-mode textarea {
    background: #ffffff;
    color: #000000;
    border: 2px solid #000000;
    font-weight: bold;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: var(--font-mono);
    background-color: var(--bg-color);
    color: var(--text-color);
    line-height: 1.6;
    padding: 2rem;
    font-size: 18px;
    /* Increased base font size */
    background-image:
        linear-gradient(rgba(30, 41, 59, 0.9), rgba(30, 41, 59, 0.9)),
        url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23334155' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
}

.container {
    max-width: 1000px;
    margin: 0 auto;
}

h1,
h2,
h3 {
    color: var(--primary-color);
    text-shadow: 0 0 10px var(--primary-glow);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    position: relative;
    overflow: hidden;
}

.card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--primary-color), transparent);
    animation: scanline 2s linear infinite;
}

@keyframes scanline {
    0% {
        transform: translateX(-100%);
    }

    100% {
        transform: translateX(100%);
    }
}

.grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
}

.form-group {
    margin-bottom: 1.5rem;
}

label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--secondary-color);
    font-weight: bold;
}

input[type="text"],
input[type="email"],
input[type="number"],
input[type="password"],
input[type="file"],
input[type="url"],
input[type="tel"],
textarea {
    width: 100%;
    padding: 0.75rem;
    background: var(--bg-color);
    border: 1px solid var(--border-color);
    color: var(--primary-color);
    font-family: var(--font-mono);
    border-radius: 4px;
    transition: all 0.3s;
}

input:focus,
textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 10px var(--primary-glow);
}

button {
    background-color: transparent;
    color: var(--primary-color);
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--primary-color);
    border-radius: 4px;
    font-family: var(--font-mono);
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
    text-transform: uppercase;
}

button:hover {
    background-color: var(--primary-color);
    color: #000;
    box-shadow: 0 0 15px var(--primary-glow);
}

.alert {
    padding: 1rem;
    border-radius: 4px;
    margin-bottom: 1rem;
    border-left: 4px solid;
    background: rgba(0, 0, 0, 0.3);
}

.alert-info {
    border-color: #3b82f6;
    color: #93c5fd;
}

.alert-success {
    border-color: var(--primary-color);
    color: var(--primary-color);
}

.alert-error {
    border-color: var(--error-color);
    color: var(--error-color);
}

.alert-warning {
    border-color: var(--warning-color);
    color: var(--warning-color);
}

pre {
    background: #000;
    color: var(--primary-color);
    padding: 1rem;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    overflow-x: auto;
    font-family: var(--font-mono);
    margin-top: 1rem;
}

.badge {
    padding: 0.25rem 0.5rem;
    border-radius: 2px;
    font-size: 0.75rem;
    border: 1px solid;
}

.badge-get {
    border-color: #3b82f6;
    color: #3b82f6;
}

.badge-post {
    border-color: var(--primary-color);
    color: var(--primary-color);
}

#interceptor-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    z-index: 1000;
    justify-content: center;
    align-items: center;
}

.interceptor-content {
    background: #000;
    border: 1px solid var(--primary-color);
    padding: 2rem;
    width: 80%;
    max-width: 600px;
    box-shadow: 0 0 30px var(--primary-glow);
    font-family: var(--font-mono);
}

.interceptor-header {
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 1rem;
    margin-bottom: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.packet-anim {
    width: 100%;
    height: 4px;
    background: #333;
    margin: 1rem 0;
    position: relative;
    overflow: hidden;
}

.packet-anim::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 20%;
    height: 100%;
    background: var(--primary-color);
    animation: packet-move 1s infinite linear;
}

@keyframes packet-move {
    0% {
        left: -20%;
    }

    100% {
        left: 100%;
    }
}

/* RTL Support */
[dir="rtl"] {
    text-align: right;
}

[dir="rtl"] .alert {
    border-left: none;
    border-right: 4px solid;
}

[dir="rtl"] pre,
[dir="rtl"] code {
    direction: ltr;
    text-align: left;
}

html[lang="fa"],
html[lang="ar"],
html[lang="he"] {
    direction: rtl;
}

/* Console Indicator */
.console-indicator {
    position: fixed;
    bottom: 20px;
    left: 20px;
    background: var(--card-bg);
    border: 1px solid var(--primary-color);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.875rem;
    color: var(--primary-color);
    z-index: 999;
    box-shadow: 0 0 20px var(--primary-glow);
    animation: pulse 2s infinite;
}

@keyframes pulse {

    0%,
    100% {
        box-shadow: 0 0 20px var(--primary-glow);
    }

    50% {
        box-shadow: 0 0 30px var(--primary-glow);
    }
}

[dir="rtl"] .console-indicator {
    left: auto;
    right: 20px;
}

/* Strict Text Direction & Alignment */
.ltr,
pre,
code,
input[type="email"],
input[type="password"],
input[type="url"],
input[type="tel"],
.stat-number,
.console-log,
.technical-term {
    direction: ltr !important;
    text-align: left !important;
    font-family: var(--font-mono);
}

.rtl {
    direction: rtl !important;
    text-align: right !important;
}

/* Visual Logger Styles */
#visual-logger {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 300px;
    background: rgba(0, 0, 0, 0.95);
    border-top: 4px solid var(--primary-color);
    z-index: 10000;
    font-family: var(--font-mono);
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease-in-out;
    transform: translateY(100%);
    /* Hidden by default */
}

#visual-logger.visible {
    transform: translateY(0);
}

#visual-logger.minimized {
    transform: translateY(calc(100% - 40px));
}

:root.projector-mode #visual-logger {
    background: #ffffff;
    border-top: 4px solid #000000;
    color: #000000;
}

.vl-header {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--border-color);
    cursor: pointer;
}

:root.projector-mode .vl-header {
    background: #e2e8f0;
    border-bottom: 2px solid #000000;
}

.vl-title {
    font-weight: bold;
    color: var(--primary-color);
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.vl-controls {
    display: flex;
    gap: 0.5rem;
}

.vl-btn {
    background: transparent;
    border: 1px solid var(--primary-color);
    color: var(--primary-color);
    padding: 0.25rem 0.5rem;
    font-size: 0.8rem;
    cursor: pointer;
    border-radius: 4px;
}

:root.projector-mode .vl-btn {
    border: 2px solid #000000;
    font-weight: bold;
}

.vl-content {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
    font-size: 14px;
}

:root.projector-mode .vl-content {
    font-size: 16px;
    /* Larger font for projector */
    font-weight: bold;
}

.vl-entry {
    margin-bottom: 0.5rem;
    padding: 0.5rem;
    border-left: 3px solid transparent;
    background: rgba(255, 255, 255, 0.05);
    font-family: 'Courier New', monospace;
    direction: ltr;
    /* Logs are always LTR */
    text-align: left;
}

:root.projector-mode .vl-entry {
    background: #f1f5f9;
    border-bottom: 1px solid #cbd5e1;
}

.vl-entry.log-info {
    border-left-color: #3b82f6;
}

.vl-entry.log-success {
    border-left-color: #10b981;
}

.vl-entry.log-warning {
    border-left-color: #f59e0b;
}

.vl-entry.log-error {
    border-left-color: #ef4444;
}

.vl-entry.log-security {
    border-left-color: #ef4444;
    background: rgba(239, 68, 68, 0.1);
}

.vl-timestamp {
    color: var(--text-muted);
    font-size: 0.8em;
    margin-right: 0.5rem;
}

/* Projector Toggle Button */
#projector-toggle {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 10001;
    background: var(--card-bg);
    border: 2px solid var(--primary-color);
    color: var(--primary-color);
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.5rem;
    cursor: pointer;
    box-shadow: 0 0 20px var(--primary-glow);
    transition: all 0.3s;
}

:root.projector-mode #projector-toggle {
    background: #000000;
    color: #ffffff;
    border: 2px solid #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

[dir="rtl"] #projector-toggle {
    right: auto;
    left: 20px;
}

/* Tables */
table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
}

table th,
table td {
    padding: 0.75rem;
    border: 1px solid var(--border-color);
}

table th {
    background: var(--card-bg);
    color: var(--primary-color);
    font-weight: bold;
}

/* Responsive Design for Mobile */
@media (max-width: 480px) {
    body {
        padding: 1rem;
        font-size: 14px;
    }

    .container {
        max-width: 100%;
    }

    h1 {
        font-size: 1.5rem;
    }

    h2 {
        font-size: 1.25rem;
    }

    h3 {
        font-size: 1.1rem;
    }

    .grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .card {
        padding: 1rem;
    }

    button {
        width: 100%;
        padding: 0.75rem;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    textarea {
        font-size: 16px;
    }

    .interceptor-content {
        width: 95%;
        padding: 1rem;
    }

    pre {
        font-size: 12px;
        padding: 0.5rem;
    }

    table {
        font-size: 0.75rem;
    }

    table th,
    table td {
        padding: 0.5rem;
    }
}

/* Responsive Design for Tablet */
@media (min-width: 481px) and (max-width: 768px) {
    body {
        padding: 1.5rem;
    }

    h1 {
        font-size: 2rem;
    }

    .grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    .card {
        padding: 1.5rem;
    }

    .interceptor-content {
        width: 90%;
    }
}

/* Responsive Design for Small Desktop */
@media(min-width: 769px) and (max-width: 1024px) {
    .container {
        max-width: 900px;
    }

    .grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.75rem;
    }
}

/* Responsive Design for Large Desktop */
@media (min-width: 1025px) {
    .container {
        max-width: 1200px;
    }
}

/* Visual Logger / Terminal Styles - Added by Amin Davodian */
#visual-logger {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 250px;
    background-color: rgba(10, 10, 10, 0.95);
    color: #00ff00;
    font-family: 'Courier New', monospace;
    z-index: 9999;
    border-top: 2px solid #00ff00;
    display: flex;
    flex-direction: column;
    transition: height 0.3s ease;
    direction: ltr;
    /* Force LTR for code logs */
    text-align: left;
    box-shadow: 0 -5px 20px rgba(0, 255, 0, 0.2);
    backdrop-filter: blur(5px);
}

#visual-logger.minimized {
    height: 40px;
}

.vl-header {
    background-color: #1a1a1a;
    padding: 8px 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    border-bottom: 1px solid #333;
    user-select: none;
}

.vl-title {
    font-weight: bold;
    color: #00ff00;
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.vl-controls {
    display: flex;
    gap: 10px;
}

.vl-btn {
    background: transparent;
    border: 1px solid #333;
    color: #888;
    cursor: pointer;
    padding: 2px 10px;
    border-radius: 3px;
    font-size: 12px;
    transition: all 0.2s;
}

.vl-btn:hover {
    color: #fff;
    border-color: #00ff00;
    background: rgba(0, 255, 0, 0.1);
}

.vl-content {
    flex: 1;
    overflow-y: auto;
    padding: 15px;
    font-size: 13px;
    line-height: 1.5;
    scrollbar-width: thin;
    scrollbar-color: #333 #111;
}

.vl-content::-webkit-scrollbar {
    width: 8px;
}

.vl-content::-webkit-scrollbar-track {
    background: #111;
}

.vl-content::-webkit-scrollbar-thumb {
    background: #333;
    border-radius: 4px;
}

.vl-entry {
    margin-bottom: 5px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    padding-bottom: 4px;
    animation: slideIn 0.2s ease;
    word-wrap: break-word;
}

.vl-timestamp {
    color: #666;
    margin-right: 10px;
    font-size: 11px;
    font-family: monospace;
}

.log-info {
    color: #60a5fa;
}

.log-success {
    color: #34d399;
}

.log-warning {
    color: #fbbf24;
}

.log-error {
    color: #f87171;
}

.log-security {
    color: #ef4444;
    font-weight: bold;
    background: rgba(239, 68, 68, 0.1);
    padding: 2px 5px;
    border-radius: 3px;
    border-left: 3px solid #ef4444;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateX(-10px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }
}

/* Network Interceptor Styles - Added by Amin Davodian */
#interceptor-modal {
    display: none;
    /* Hidden by default */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.85);
    z-index: 10000;
    justify-content: center;
    align-items: center;
    backdrop-filter: blur(5px);
}

.interceptor-content {
    background: #000;
    border: 2px solid #00ff00;
    padding: 2rem;
    width: 500px;
    max-width: 90%;
    border-radius: 8px;
    box-shadow: 0 0 50px rgba(0, 255, 0, 0.2);
    font-family: 'Courier New', monospace;
    position: relative;
    animation: modalPop 0.3s ease-out;
}

.interceptor-header {
    border-bottom: 1px solid #333;
    padding-bottom: 1rem;
    margin-bottom: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.packet-anim {
    height: 2px;
    background: #333;
    position: relative;
    overflow: hidden;
    margin: 1rem 0;
}

.packet-anim::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 50%;
    height: 100%;
    background: linear-gradient(90deg, transparent, #00ff00, transparent);
    animation: packetFlow 1s infinite linear;
}

@keyframes packetFlow {
    0% {
        left: -100%;
    }

    100% {
        left: 200%;
    }
}

@keyframes modalPop {
    0% {
        transform: scale(0.9);
        opacity: 0;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }
}

/* Clickable Examples & Attack Buttons - Added by Amin Davodian */
.examples-container {
    margin-top: 1rem;
    padding: 1rem;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 4px;
    border: 1px dashed var(--border-color);
}

.examples-title {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
    display: block;
}

.example-btn {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    margin: 0.25rem;
    background: rgba(52, 211, 153, 0.1);
    border: 1px solid var(--primary-color);
    color: var(--primary-color);
    border-radius: 20px;
    font-size: 0.8rem;
    cursor: pointer;
    transition: all 0.2s;
    user-select: none;
}

.example-btn:hover {
    background: var(--primary-color);
    color: #000;
    transform: translateY(-2px);
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

.example-btn.attack {
    border-color: var(--error-color);
    color: var(--error-color);
    background: rgba(248, 113, 113, 0.1);
}

.example-btn.attack:hover {
    background: var(--error-color);
    color: #fff;
}

.example-btn.safe {
    border-color: #3b82f6;
    color: #3b82f6;
    background: rgba(59, 130, 246, 0.1);
}

.example-btn.safe:hover {
    background: #3b82f6;
    color: #fff;
}

/* Projector Mode - Clickable Examples */
:root.projector-mode .example-btn {
    border-width: 2px;
    font-weight: bold;
}

:root.projector-mode .examples-container {
    border-width: 2px;
    background: #ffffff;
}